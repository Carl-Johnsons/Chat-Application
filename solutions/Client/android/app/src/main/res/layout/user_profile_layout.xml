<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">


        <ImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/background_image"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="16dp"
            android:layout_alignStart="@id/background_image"/>
        <ImageView
            android:id="@+id/profile_image_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@id/profile_image"
            android:layout_alignBottom="@id/profile_image"
            android:src="@drawable/ic_pencil"
            android:contentDescription="Edit Profile Image" />


        <TextView
            android:id="@+id/preferred_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:paddingLeft="30dp"
            android:layout_toRightOf="@id/profile_image"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_alignStart="@id/background_image"
            android:text="Personal Information"
            android:textStyle="bold"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/user_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Info_title"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_alignStart="@id/background_image"
            android:text="Phone:"
            android:textSize="14sp"
            android:textColor="#666666" />
        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Info_title"
            android:layout_toEndOf="@id/user_phone_text"
            android:layout_marginTop="8dp"
            android:layout_alignStart="@id/phone_number"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/user_gender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_phone_text"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_alignStart="@id/background_image"
            android:text="Gender:"
            android:textSize="14sp"
            android:textColor="#666666" />
        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_number"
            android:layout_toEndOf="@id/user_gender_text"
            android:layout_marginTop="8dp"
            android:layout_alignStart="@id/gender"
            android:textSize="14sp" />

        <Button
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignEnd="@id/background_image"
            android:text="Update"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>
