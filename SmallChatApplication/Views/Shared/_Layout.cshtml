<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="CACHE-CONTROL" content="NO-CACHE" />
    <META HTTP-EQUIV="EXPIRES" CONTENT="Mon, 22 Jul 2002 11:12:01 GMT">
    <title>@ViewData["Title"] - SmallChatApplication</title>
    @* Boostrap and jquery library *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


    @* Use signalR client-side library *@
    <script src="~/js/signalr.js"></script>

    @* set the global variable to use in partial view and external script *@
    <script>
        var _BASE_ADDRESS = "https://localhost:7190";
        //Get the id from the controller so i don't need to call API service to find out who the current user is
        var _USER_ID = @ViewBag.ID;

        //Start connection to map the connection string to userId in database
        var _CONNECTION = new signalR.HubConnectionBuilder().withUrl("/chatHub").build();
    </script>
    <script type="module" src="~/js/site.js"></script>
</head>
<body>
    <header>
    </header>

    <div class="container-fluid">
        @RenderBody()
    </div>

    @*     <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2023 - SmallChatApplication - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
    </footer> *@


    <script src="~/js/ApplicationNavbar/ApplicationNavbarScript.js"></script>
    <script src="~/js/Conversation/ConversationScript.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>